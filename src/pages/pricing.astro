---
import '../styles/base.scss';
import Calculator from '../components/Calculator.vue';
import BaseLayout from '../layouts/base.astro'
---
<BaseLayout
	title="fffood / Rates and Pricing" 
	description="How much does it cost"
	hero="/img/heroes/pricing.png"
	showCTA={true}>

		<section class="section section--darkest">
			<div class="section__inner">
				<h1>Pricing</h1>
				<p><strong>We keep pricing simple and transparent — no mystery, no pressure.</strong>
					<br class="u-no-mobile">Here’s how our rates work and what to expect based on your needs.</p>
			</div> <!-- /.section__inner -->
		</section> <!-- /.section -->

		<Calculator client:load />		
		
</BaseLayout>